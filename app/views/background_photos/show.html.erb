<div class="page-header">
  <%= link_to background_photos_path, class: 'btn btn-default' do %>
    All Background_photos
  <% end %>
  <%= link_to edit_background_photo_path(@background_photo), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show background_photo</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @background_photo.name %></dd>

  <dt>Source url:</dt>
  <dd><%= @background_photo.source_url %></dd>

 <dt>Files :</dt>
  <dd>
    <% @background_photo.files.each do |file| %>
      <%= link_to file.filename, file, target: :blank %>
    <% end %>
  </dd>

</dl>
